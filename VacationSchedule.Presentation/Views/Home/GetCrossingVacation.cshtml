@model IDictionary<Employee, List<Vacation>>

<div>
    <table class="table table-primary table-hover">
        <tr>
            <th>Сотрудник</th>
            <th>Пересечение</th>
        </tr>
        @if (Model.Any())
        {
            foreach (var vacations in Model)
            {
                <tr>
                    <td>
                        <p><small>ФИО: @vacations.Key.Name</small></p>
                        <p><small>Должность: @vacations.Key.Position.GetDisplayName()</small></p>
                        <p><small>Пол: @vacations.Key.Gender.GetDisplayName()</small></p>
                        <p><small>Возраст: @vacations.Key.Age</small></p>
                    </td>
                    <td>
                        @foreach (var vacation in vacations.Value)
                        {
                            <p>
                                <small>
                                    @vacation.Start.ToShortDateString() - @vacation.End.ToShortDateString()
                                </small>
                            </p>
                        }
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="2">Пересечений нет</td>
            </tr>
        }
    </table>
</div>